@{
    Layout = "_AuthLayout";
}

@if (ViewData["err"] != null)
{
    <div class="alert alert-danger border border-1">
    <p class="f14 text-danger mb-0">@ViewData["err"]</p>
</div>
}
<form class="row g-1" asp-action="Signup">
     <div class="mb-3">
        <label for="fname" class="text-secondary f12 mb-1">First Name</label>
        <input type="text" class="form-control col-12" id="fname" name="firstName" placeholder="Your first name">
    </div>
     <div class="mb-3">
        <label for="lname" class="text-secondary f12 mb-1">Last Name</label>
        <input type="text" class="form-control col-12" id="lname" name="lastName" placeholder="Your last name">
    </div>
     <div class="mb-3">
        <label for="email" class="text-secondary f12 mb-1">Email</label>
        <input type="email" class="form-control col-12" id="email" name="email" placeholder="Your email address">
    </div>
    <div class="mb-3">
        <label for="phone" class="text-secondary f12 mb-1">Phone</label>
        <input type="tel" class="form-control col-12" id="phone" name="phone" placeholder="Your phone number">
    </div>
   <div class="mb-3">
        <label for="password" class="text-secondary f12 mb-1">Password</label>
        <input type="password" class="form-control col-12" id="password" name="password" placeholder="your new password">
    </div>
    <button type="submit" class="btn btn-md btn-orange fw-normal">Sign up</button>
</form>
<p class="text-center f12">Already have an account? <a asp-action="Login" asp-controller="Auth">Login.</a></p>

