<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"] - EasyMart Promo Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body class="vh-100">
    <header></header>
    <div class="d-flex flex-row h-100">
        <div class="flex-fill auth-bg">
            <div class="d-flex flex-column">
                <div style="margin-top:30vh;"></div>
                <div class="text-center flex-grow-3">
                    <img src="~/img/easymart-logo.png" style="max-width: 100px;" alt="easymart logo"
                        class="d-block mx-auto">
                    <h3 class="app-name fw-bold mt-3">EasyMart Promo Portal</h3>
                </div>
                <div class="position-fixed bottom-0 p-3">
                    <p class="f14 text-center mb-0">&copy; Copyright 2024 - EasyMart. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                </div>
            </div>

        </div>
        <div style="max-width: 450px;" class="bg-light border border-start-1">
            <div style="margin-top:20vh;"></div>
            <div class="p-4">
                 @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mian.js" asp-append-version="true"></script>
    @await RenderSectionAsync("js", required: false)
</body>

</html>